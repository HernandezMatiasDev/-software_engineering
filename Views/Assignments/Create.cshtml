@model SuMejorPeso.Models.Assignment

@{
    ViewData["Title"] = "Registrar Actividad";
}


<hr />
<div class="row fondo-div margen-barra">
    <div class="col-md-12">
        <form asp-action="Create" method="post">

            <fieldset>
                <legend>Registrar nueva actividad</legend>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-input">
                    <label asp-for="name" class="form-label">Nombre</label>
                    <input asp-for="name" class="input-style" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>

                <div class="form-input">
                    <label asp-for="description" class="form-label">Descripción</label>
                    <textarea asp-for="description" class="input-style"></textarea>
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                
                <div class="form-input">
                    <label asp-for="durationMinutes" class="form-label">Duración (en minutos)</label>
                    <input asp-for="durationMinutes" type="number" class="input-style" />
                    <span asp-validation-for="durationMinutes" class="text-danger"></span>
                </div>

                <div class="form-input">
                    <label asp-for="difficulty" class="form-label">Dificultad</label>
                    <input asp-for="difficulty" class="input-style" placeholder="Ej: Baja, Media, Alta" />
                    <span asp-validation-for="difficulty" class="text-danger"></span>
                </div>
            </fieldset>

            <div class="form-group d-flex1">
                <button type="submit" class="btn btn2">Guardar</button>
                <a asp-action="Index" class="btn btn2">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}