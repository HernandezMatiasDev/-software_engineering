@model IEnumerable<SuMejorPeso.Models.Assignment>

@{
    ViewData["Title"] = "Actividades Inactivas";
}

<h1>Actividades Inactivas</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">➕ Nueva Actividad</a>
    <a class="btn btn-success" asp-action="Index">✅ Ver Activas</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Duración (Min)</th>
            <th>Dificultad</th>
            <th>Activa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.name)</td>
        <td>@Html.DisplayFor(modelItem => item.durationMinutes)</td>
        <td>@Html.DisplayFor(modelItem => item.difficulty)</td>
        <td>@(item.active ? "Sí" : "No")</td>
        <td>
            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.id">Ver</a>
            <a class="btn btn-success btn-sm" asp-action="ReactivateConfirmation" asp-route-id="@item.id">Reactivar</a>
        </td>
    </tr>
}   
    </tbody>
</table>