@model SuMejorPeso.Models.Branch

@{
    ViewData["Title"] = "Detalles de la Sede";
}

<h1>Detalles de @Model.name</h1>

<table class="table table-bordered col-md-6">
    <tr>
        <th style="width: 20%;">ID</th>
        <td>@Model.id</td>
    </tr>
    <tr>
        <th>Nombre</th>
        <td>@Model.name</td>
    </tr>
    <tr>
        <th>Dirección</th>
        <td>@Model.address</td>
    </tr>
    <tr>
        <th>Teléfono</th>
        <td>@Model.phone</td>
    </tr>
    <tr>
        <th>Activa</th>
        <td>@(Model.active ? "Sí" : "No")</td>
    </tr>
</table>
<hr />

@* 1. Condicional: Mostrar 'Editar' solo si la sede está activa *@
@if (Model.active)
{
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.id">Editar</a>
}

@* 2. Condicional: El botón 'Volver' regresa a Index (activos) o Inactive (inactivos) *@
@{
    var backAction = Model.active ? "Index" : "Inactive";
}
<a class="btn btn-secondary" asp-action="@backAction">Volver</a>