@model IEnumerable<SuMejorPeso.Models.Branch>

@{
    ViewData["Title"] = "Lista de Sedes";
}

<h1 class="margen-barra">Sedes Registradas</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">➕ Nueva Sede</a>
    <a class="btn btn-info" asp-action="Inactive">👥 Ver Inactivas</a>
</p>

<table class="table table-striped table-fixed">
    <colgroup>
        <col style="width:22%;">
        <col style="width:22%;">
        <col style="width:22%;">
        <col style="width:10%;">
        <col style="width:80px;">
    </colgroup>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Activa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.name)</td>
        <td>@Html.DisplayFor(modelItem => item.address)</td>
        <td>@Html.DisplayFor(modelItem => item.phone)</td>
        <td>@(item.active ? "Sí" : "No")</td>
        <td>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle toggle-table" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                   opciones
                </a>   
                <ul class="dropdown-menu dropdown-menu-table">
                    <li><a class="btn dropdown-item" asp-action="Details" asp-route-id="@item.id">Ver</a> </li> 
                    <li> <a class="btn  dropdown-item" asp-action="Edit" asp-route-id="@item.id">Editar</a></li>
                    <li> <a class="btn dropdown-item" asp-action="Delete" asp-route-id="@item.id">Desactivar</a></li> 
                </ul>
            </div>
        </td>
    </tr>
}
    </tbody>
</table>