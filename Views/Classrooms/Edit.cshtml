@model SuMejorPeso.Models.Classroom

@{
    ViewData["Title"] = "Editar Clase";
    bool isSuperUser = User.IsInRole("SuperUser");
}

<h1 class="margen-barra">Editar Clase: @Model.name</h1>
<hr />

<div class="fondo-div-completo">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="id" />
        <input type="hidden" asp-for="active" />

        <div class="row">
            <div class="col-md-6">

                <fieldset>
                    <legend>Detalles de la clase</legend>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-input">
                        <label asp-for="name" class="form-label">Nombre</label>
                        <input asp-for="name" class="input-style" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>

                    <div class="form-input">
                        <label asp-for="description" class="form-label">Descripción</label>
                        <textarea asp-for="description" class="input-style"></textarea>
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>
                    
                    <div class="form-input">
                        <label asp-for="limitedPlace" class="form-label">Cupo Máximo</label>
                        <input asp-for="limitedPlace" type="number" class="input-style" />
                        <span asp-validation-for="limitedPlace" class="text-danger"></span>
                    </div>

                    <div class="form-input">
                        <label asp-for="assignmentId" class="form-label">Actividad</label>
                        <select asp-for="assignmentId" class="input-style" asp-items="ViewBag.ActivityList">
                            <option value="">-- Seleccionar Actividad --</option>
                        </select>
                        <span asp-validation-for="assignmentId" class="text-danger"></span>
                    </div>
                    
                    <div class="form-input">
                        <label asp-for="branchId" class="form-label">Sede</label>
                        <select asp-for="branchId" class="input-style" asp-items="ViewBag.BranchList" disabled="@(!isSuperUser)">
                            @if(isSuperUser) { <option value="">-- Seleccionar Sede --</option> }
                        </select>
                        @if (!isSuperUser) { <input type="hidden" asp-for="branchId" /> }
                        <span asp-validation-for="branchId" class="text-danger"></span>
                    </div>
                </fieldset>
                
            </div>

            <div class="col-md-6">

                <fieldset>
                    <legend>Asignaciones</legend>
                    <div class="form-input">
                        <label class="form-label">Profesores Asignados</label>
                        <select name="selectedCoaches" class="input-style" multiple asp-items="ViewBag.CoachList" style="height: 140px;">
                        </select>
                        <small class="form-text text-muted">Mantenga Ctrl (o Cmd) para seleccionar varios.</small>
                    </div>

                    <div class="form-input">
                        <label class="form-label">Miembros Inscritos</label>
                        <select name="selectedMembers" class="input-style" multiple asp-items="ViewBag.MemberList" style="height: 140px;">
                        </select>
                        <small class="form-text text-muted">Mantenga Ctrl (o Cmd) para seleccionar varios.</small>
                    </div>
                </fieldset>
              
            </div>
        </div>

        <div class="form-group d-flex1">
            <button type="submit" class="btn btn2">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn2">Volver</a>
        </div>
    </form>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}