@model IEnumerable<SuMejorPeso.Models.Classroom>

@{
    ViewData["Title"] = "Clases";
}

<h1 class="margen-barra">Clases</h1>

<p>
    <a class="btn " asp-action="Create">➕ Nueva Clase</a>
    <a class="btn" asp-action="Inactive">👥 Ver Inactivas</a>
</p>


<table class="table table-striped table-fixed">
    <colgroup>
        <col style="width:19%;">
        <col style="width:19%;">
        <col style="width:19%;">
        <col style="width:10%;">
        <col style="width:10%;">
        <col style="width:80px;">
    </colgroup>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Actividad</th>
            <th>Sede</th>
            <th>Cupo</th>
            <th>Activa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.name)</td>
        <td>@Html.DisplayFor(modelItem => item.assignment.name)</td>
        <td>@Html.DisplayFor(modelItem => item.branch.name)</td>
        <td>@Html.DisplayFor(modelItem => item.limitedPlace)</td>
        <td>@(item.active ? "Sí" : "No")</td>
        <td>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle toggle-table" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                   opciones
                </a>   
                <ul class="dropdown-menu dropdown-menu-table"> 
                    <li><a class="btn  dropdown-item" asp-action="Details" asp-route-id="@item.id">Ver</a> </li> 
                    <li><a class="btn dropdown-item" asp-action="Edit" asp-route-id="@item.id">Editar</a></li> 
                    <li><a class="btn dropdown-item" asp-action="Delete" asp-route-id="@item.id">Desactivar</a></li> 
                </ul>
            </div>     
        </td>
    </tr>
}
    </tbody>
</table>