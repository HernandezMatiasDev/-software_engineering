@model IEnumerable<SuMejorPeso.Models.Classroom>

@{
    ViewData["Title"] = "Clases";
}

<h1>Clases</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">➕ Nueva Clase</a>
    <a class="btn btn-info" asp-action="Inactive">👥 Ver Inactivas</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Actividad</th>
            <th>Sede</th>
            <th>Cupo</th>
            <th>Activa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.name)</td>
        <td>@Html.DisplayFor(modelItem => item.assignment.name)</td>
        <td>@Html.DisplayFor(modelItem => item.branch.name)</td>
        <td>@Html.DisplayFor(modelItem => item.limitedPlace)</td>
        <td>@(item.active ? "Sí" : "No")</td>
        <td>
            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.id">Ver</a>
            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.id">Editar</a>
            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.id">Desactivar</a>
        </td>
    </tr>
}
    </tbody>
</table>