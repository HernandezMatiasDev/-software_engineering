@model SuMejorPeso.Models.Coach

@{
    ViewData["Title"] = "Registrar Profesor";
}

<h1>Registrar nuevo Profesor</h1>
<p>
    Este formulario crea el "perfil" de un profesor 
    (con DNI, especialidades, etc.) y lo vincula a una
    cuenta de Usuario (User) existente con el rol 'coach'.
</p>
<hr />

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <h4>Datos Personales (Heredados de Persona)</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="lastName" class="control-label"></label>
                <input asp-for="lastName" class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="dni" class="control-label"></label>
                <input asp-for="dni" class="form-control" />
                <span asp-validation-for="dni" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="phone" class="control-label"></label>
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <h4>Datos del Profesor (Coach)</h4>

            <div class="form-group mb-3">
                <label asp-for="userId" class="control-label">Cuenta de Usuario (Login)</label>
                <select asp-for="userId" class="form-control" asp-items="ViewBag.UserList">
                    <option value="">-- Seleccionar Usuario (Rol: Coach) --</option>
                </select>
                <span asp-validation-for="userId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="branchId" class="control-label">Sede Asignada</label>
                <select asp-for="branchId" class="form-control" asp-items="ViewBag.BranchList">
                    <option value="">-- Seleccionar Sede --</option>
                </select>
                <span asp-validation-for="branchId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="state" class="control-label">Estado (ej: Activo, Licencia)</label>
                <input asp-for="state" class="form-control" />
                <span asp-validation-for="state" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Especialidades</label>
                <select name="selectedSpecialties" class="form-control" multiple asp-items="ViewBag.SpecialtyList">
                </select>
                <small class="form-text text-muted">Mantenga Ctrl (o Cmd) para seleccionar varias.</small>
            </div>

            <a asp-controller="Specialties" asp-action="Create" 
               class="btn btn-sm btn-info" target="_blank">
                (Crear nueva especialidad...)
            </a>
            
        </div>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-success">Guardar Profesor</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}