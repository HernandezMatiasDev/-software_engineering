@model IEnumerable<SuMejorPeso.Models.Coach>

@{
    ViewData["Title"] = "Profesores Inactivos";
}

<h1 class="margen-barra">Profesores Inactivos</h1>

<p>
    <a class="btn " asp-action="Create">➕ Nuevo Profesor</a>
    <a class="btn " asp-action="Index">✅ Ver Activos</a>
</p>

<table class="table table-striped table-fixed">
    <colgroup>
        <col style="width:20%;">
        <col style="width:15%;">
        <col style="width:15%;">
        <col style="width:8%;">
        <col style="width:15%;">
        <col style="width:80px;">
    </colgroup>
    <thead>
        <tr>
            <th>Nombre Completo</th>
            <th>DNI</th>
            <th>Email</th>
            <th>Login (Usuario)</th>
            <th>Sede</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.name @item.lastName</td>
        <td>@item.dni</td>
        <td>@item.email</td>
        <td>@(item.user?.userName ?? "N/A")</td>
        <td>@(item.branch?.name ?? "N/A")</td>
        <td>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle toggle-table" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                opciones..
                </a>
                <ul class="dropdown-menu dropdown-menu-table">
                    <li> <a class="btn  dropdown-item" asp-action="Details" asp-route-id="@item.id">Ver</a> </li> 
                    <li> <a class="btn  dropdown-item" asp-action="ReactivateConfirmation" asp-route-id="@item.id">Reactivar</a> </li> 
                </ul>
            </div>
        </td>
    </tr>
}   
    </tbody>
</table>