@model SuMejorPeso.Models.Member

@{
    ViewData["Title"] = "Detalles del Miembro";
}

<h1>Detalles de @Model.name @Model.lastName</h1>

<table class="table">
    <tr><th>ID</th><td>@Model.id</td></tr>
    <tr><th>DNI</th><td>@Model.dni</td></tr>
    <tr><th>Teléfono</th><td>@Model.phone</td></tr>
    <tr><th>Email</th><td>@Model.email</td></tr>
    <tr><th>Dirección</th><td>@Model.direction</td></tr>
    <tr><th>Activo</th><td>@(Model.state ? "Sí" : "No")</td></tr>
    <tr><th>Notas</th><td>@Model.note</td></tr>
</table>

<a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.id">Editar</a>
<a class="btn btn-secondary" asp-action="Index">Volver</a>
