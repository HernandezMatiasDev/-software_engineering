@* --- PASO 1: Agrega estos 'using' --- *@
@using X.PagedList
@using X.PagedList.Mvc.Core

@* --- PASO 2: Cambia el @model --- *@
@model IPagedList<SuMejorPeso.Models.Member>

@{
    ViewData["Title"] = "Lista de Miembros";
}

<h1 class="margen-barra">Miembros registrados</h1>

@* --- PASO 3: Agrega el formulario de búsqueda --- *@
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group" style="max-width: 500px;">
        <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control" placeholder="Buscar por DNI, Nombre o Apellido..." />
        <button type="submit" class="btn btn-outline-secondary">Buscar</button>
    </div>
</form>


<p>
    <a class="btn btn-primary" asp-action="Create">➕ Nuevo miembro</a>
    <a class="btn btn-info" asp-action="Inactive">👥 Ver Inactivos</a>
</p>

<table class="table table-striped table-fixed">
    @* (El <colgroup> y <thead> se quedan igual) *@
    <colgroup>
        <col style="width:18%;">
        <col style="width:18%;">
        <col style="width:17%;">
        <col style="width:14%;">
        <col style="width:12%;">
        <col style="width:7%;">
        <col style="width:100px;">
    </colgroup>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @* El @foreach sigue funcionando igual *@
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.lastName</td>
                <td>@item.dni</td>
                <td>@item.phone</td>
                <td>@item.email</td>
                <td>@(item.active ? "Sí" : "No")</td>
                <td>
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle toggle-table" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            opciones
                        </a>
                        <ul class="dropdown-menu dropdown-menu-table">
                            <li> <a class="btn dropdown-item " asp-action="Details" asp-route-id="@item.id">Ver</a> </li>
                            <li> <a class="btn dropdown-item" asp-action="Edit" asp-route-id="@item.id">Editar</a> </li>
                            <li> <a class="btn dropdown-item" asp-action="Delete" asp-route-id="@item.id">Eliminar</a> </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@* --- PASO 4: Agrega los controles de paginación --- *@
<div class="mt-3">
    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, searchString = ViewBag.CurrentFilter }),
        new PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        })
</div>