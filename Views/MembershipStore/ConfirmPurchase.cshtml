@model SuMejorPeso.Models.TypeMembreship

@{ ViewData["Title"] = "Confirmar Compra"; }

<h1 class="margen-barra">Confirmar Selección</h1>

<p>Estás a punto de adquirir el siguiente plan:</p>

<div class="card mb-3" style="max-width: 540px;">
  <div class="card-body">
    <h5 class="card-title">@Model.name</h5>
    <p class="card-text">@Model.description</p>
    <p class="card-text"><small class="text-muted">Duración: @Model.daysDuration días | Precio: $@Model.price</small></p>
  </div>
</div>

<p>
    Para activar tu membresía y convertirte en miembro, necesitamos algunos datos adicionales.
</p>

<a asp-action="EnterMemberDetails" asp-route-typeMembershipId="@Model.id" class="btn btn-primary">
    Continuar y completar mis datos
</a>
<a asp-action="Index" class="btn btn-secondary">Cancelar</a>