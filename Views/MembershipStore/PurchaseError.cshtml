@{ ViewData["Title"] = "Error en la Compra"; }

<h1>Error</h1>
<p class="text-danger">@ViewBag.ErrorMessage</p>
<a asp-action="Index" class="btn btn-primary">Volver a la tienda</a>
@if (!User.IsInRole(UserRole.member.ToString()))
{
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
}