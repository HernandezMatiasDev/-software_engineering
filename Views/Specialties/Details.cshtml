@model SuMejorPeso.Models.Specialty

@{
    ViewData["Title"] = "Detalles de Especialidad";
}

<h1>Detalles de @Model.name</h1>

<div class="row">
    <div class="col-md-6">
        <h4>Datos</h4>
        <table class="table table-bordered">
            <tr>
                <th style="width: 25%;">ID</th>
                <td>@Model.id</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>@Model.name</td>
            </tr>
            <tr>
                <th>Activa</th>
                <td>@(Model.active ? "Sí" : "No")</td>
            </tr>
        </table>
    </div>
    <div class="col-md-6">
        <h4>Profesores con esta Especialidad</h4>
        @if (Model.coaches.Any())
        {
            <ul class="list-group">
                @foreach (var coach in Model.coaches)
                {
                    <li class="list-group-item">@coach.name @coach.lastName</li>
                }
            </ul>
        }
        else
        {
            <p>(Ningún profesor tiene asignada esta especialidad)</p>
        }
    </div>
</div>
<hr />


@if (Model.active)
{
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.id">Editar</a>
}

@{
    var backAction = Model.active ? "Index" : "Inactive";
}
<a class="btn btn-secondary" asp-action="@backAction">Volver</a>