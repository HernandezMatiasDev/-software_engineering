@model SuMejorPeso.Models.TypeMembreship

@{
    ViewData["Title"] = "Editar Membresía";
}
 
<hr />
<div class="row fondo-div margen-barra">
    <div class="col-md-12">
        <form asp-action="Edit" method="post">
            <fieldset>
                <legend>Editar Tipo de Membresía</legend>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input type="hidden" asp-for="id" />
                <input type="hidden" asp-for="active" /> 
                
                <div class="form-input">
                    <label asp-for="name" class="form-label">Nombre del Plan</label>
                    <input asp-for="name" class="input-style" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>

                <div class="form-input">
                    <label asp-for="description" class="form-label">Descripción</label>
                    <textarea asp-for="description" class="input-style"></textarea>
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                
                <div class="form-input">
                    <label asp-for="daysDuration" class="form-label">Duración (en días)</label>
                    <input asp-for="daysDuration" type="number" class="input-style" />
                    <span asp-validation-for="daysDuration" class="text-danger"></span>
                </div>

                <div class="form-input">
                    <label asp-for="price" class="form-label">Precio</label>
                    <input asp-for="price" type="number" step="0.01" class="input-style" />
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>
            </fieldset>

            <div class="form-group d-flex1">
                <button type="submit" class="btn btn2">Guardar cambios</button>
                <a asp-action="Index" class="btn btn2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}