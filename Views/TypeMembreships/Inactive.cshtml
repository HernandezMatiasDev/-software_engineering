@model IEnumerable<SuMejorPeso.Models.TypeMembreship>

@{
    ViewData["Title"] = "Membresías Inactivas";
}

<h1>Tipos de Membresía Inactivos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">➕ Nuevo Tipo</a>
    <a class="btn btn-success" asp-action="Index">✅ Ver Activos</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Duración (Días)</th>
            <th>Precio</th>
            <th>Activa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.name)</td>
        <td>@Html.DisplayFor(modelItem => item.daysDuration)</td>
        <td>$@Html.DisplayFor(modelItem => item.price)</td>
        <td>@(item.active ? "Sí" : "No")</td>
        <td>
            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.id">Ver</a>
            <a class="btn btn-success btn-sm" asp-action="ReactivateConfirmation" asp-route-id="@item.id">Reactivar</a>
        </td>
    </tr>
}   
    </tbody>
</table>