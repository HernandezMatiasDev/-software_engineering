@model SuMejorPeso.Models.User

@{
    ViewData["Title"] = "Registrar Usuario";
}

<h1>Registrar nuevo usuario</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <h4>Datos de Acceso</h4>
            
            <div class="form-group mb-3">
                <label asp-for="userName" class="control-label">Nombre de Usuario</label>
                <input asp-for="userName" class="form-control" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label class="control-label">Contraseña</label>
                <input name="Password" type="password" class="form-control" />
                <span class="text-muted small">El controlador debe hashear esto.</span>
            </div>

            <hr/>
            <h4>Datos Personales</h4>

            <div class="form-group mb-3">
                <label asp-for="name" class="control-label">Nombre</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="lastName" class="control-label">Apellido</label>
                <input asp-for="lastName" class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <hr/>
            <h4>Permisos y Sede</h4>

            <div class="form-group mb-3">
                <label asp-for="Role" class="control-label">Rol</label>
                <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">
                    <option value="">-- Seleccionar Rol --</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="branchId" class="control-label">Sede</label>
                <select asp-for="branchId" class="form-control" asp-items="ViewBag.Branches">
                    <option value="">-- Sin Sede (ej: SuperUser) --</option>
                </select>
                <span asp-validation-for="branchId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}