@model SuMejorPeso.Models.User

@{
    ViewData["Title"] = "Editar Usuario";
}

<h1>Editar Usuario: @Model.userName</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="active" />
            <input type="hidden" asp-for="passwordHash" />
            <input type="hidden" asp-for="salt" />
            <input type="hidden" asp-for="lastAccess" />
            
            <h4>Datos de Acceso</h4>
            <div class="form-group mb-3">
                <label asp-for="userName" class="control-label">Nombre de Usuario</label>
                <input asp-for="userName" class="form-control" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            <p class="text-muted small">
                Para cambiar la contraseña, utilice un módulo separado de "Cambio de Contraseña".
            </p>

            <hr/>
            <h4>Datos Personales</h4>

            <div class="form-group mb-3">
                <label asp-for="name" class="control-label">Nombre</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="lastName" class="control-label">Apellido</label>
                <input asp-for="lastName" class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <hr/>
            <h4>Permisos y Sede</h4>

            <div class="form-group mb-3">
                <label asp-for="Role" class="control-label">Rol</label>
                <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="branchId" class="control-label">Sede</label>
                <select asp-for="branchId" class="form-control" asp-items="ViewBag.Branches">
                    <option value="">-- Sin Sede (ej: SuperUser) --</option>
                </select>
                <span asp-validation-for="branchId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}