@* --- PASO 1: Agrega 'using' y cambia el @model --- *@
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<SuMejorPeso.Models.User>

@{
    ViewData["Title"] = "Usuarios Inactivos";
}

<h1 class="margen-barra">@ViewData["Title"]</h1>

@* --- PASO 2: Agrega el formulario de búsqueda --- *@
<form asp-action="Inactive" method="get" class="mb-3">
    <div class="input-group" style="max-width: 500px;">
        <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control" placeholder="Buscar por Usuario, Nombre, Email..." />
        <button type="submit" class="btn btn-outline-secondary">Buscar</button>
    </div>
</form>

<p>
    <a class="btn btn-success" asp-action="Index">✅ Ver Activos</a>
</p>

<table class="table table-striped table-fixed">
    @* (El <colgroup> y <thead> se quedan igual) *@
    <colgroup>
        <col style="width:20%;">
        <col style="width:20%;">
        <col style="width:12%;">
        <col style="width:12%;">
        <col style="width:12%;">
        <col style="width:9%;">
        <col style="width:80px;">
    </colgroup>
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Nombre Completo</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Sede</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.userName)</td>
        <td>@Html.DisplayFor(modelItem => item.name) @Html.DisplayFor(modelItem => item.lastName)</td>
        <td>@Html.DisplayFor(modelItem => item.email)</td>
        <td>@Html.DisplayFor(modelItem => item.Role)</td>
        <td>@(item.branch?.name ?? "N/A")</td>
        <td>@(item.active ? "Sí" : "No")</td>
        <td>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle toggle-table" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                   opciones
                </a>
                <ul class="dropdown-menu dropdown-menu-table">
                    <li><a class="btn dropdown-item" asp-action="Details" asp-route-id="@item.id">Ver</a></li> 
                    <li><a class="btn dropdown-item" asp-action="ReactivateConfirmation" asp-route-id="@item.id">Reactivar</a></li> 
                </ul>
            </div>
        </td>
    </tr>
}
    </tbody>
</table>

@* --- PASO 3: Agrega los controles de paginación --- *@
<div class="mt-3">
    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Inactive",
        new { page, searchString = ViewBag.CurrentFilter }),
        new PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        })
</div>