@model IEnumerable<SuMejorPeso.Models.User>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h1 class="margen-barra">Usuarios del Sistema</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">➕ Nuevo Usuario</a>
    <a class="btn btn-info" asp-action="Inactive">👥 Ver Inactivos</a>
</p>

<table class="table table-striped table-fixed">
    <colgroup>
        <col style="width:20%;">
        <col style="width:20%;">
        <col style="width:12%;">
        <col style="width:12%;">
        <col style="width:15%;">
        <col style="width:9%;">
        <col style="width:80px;">
    </colgroup>
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Nombre Completo</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Sede</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.userName)</td>
        <td>@Html.DisplayFor(modelItem => item.name) @Html.DisplayFor(modelItem => item.lastName)</td>
        <td>@Html.DisplayFor(modelItem => item.email)</td>
        <td>@Html.DisplayFor(modelItem => item.Role)</td>
        
        <td>@(item.branch?.name ?? "N/A")</td>
        
        <td>@(item.active ? "Sí" : "No")</td>
        <td>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle toggle-table" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                   opciones
                </a>   
                <ul class="dropdown-menu dropdown-menu-table"> 
                    <li>  <a class="btn dropdown-item" asp-action="Details" asp-route-id="@item.id">Ver</a></li> 
                    <li><a class="btn dropdown-item" asp-action="Edit" asp-route-id="@item.id">Editar</a></li> 
                    <li> <a class="btn  dropdown-item" asp-action="Delete" asp-route-id="@item.id">Desactivar</a></li> 
                </ul>
            </div>
        </td>
    </tr>
}
    </tbody>
</table>