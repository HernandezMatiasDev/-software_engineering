@model SuMejorPeso.Models.User

@{
    ViewData["Title"] = "Reactivar Usuario";
}

<h1>Reactivar Usuario</h1>

<h4>El nombre de usuario que ingresó corresponde a un usuario inactivo: @Model.userName.</h4>
<p>
    ¿Desea reactivarlo y usar sus datos existentes?
</p>
<hr />
<form asp-action="Reactivate" method="post">
    <input type="hidden" asp-for="id" />
    <button type="submit" class="btn btn-success">Sí, Reactivar</button>
    <a asp-action="Index" class="btn btn-secondary">No, Volver</a>
</form>